<%- include('partials/header', { title: 'All Rentals' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>All Rentals</h2>
</div>

<% if (rentals.length === 0) { %>
    <div class="alert alert-info">
        No rentals found. <a href="/ben/rentals/add">Add the first rental</a>
    </div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Rental ID</th>
                    <th>Customer name</th>
                    <th>rental days</th>
                    <th>total cost</th>
                    <th>bookId</th>
                    <th>Book authur</th>
                </tr>
            </thead>
            <tbody>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.rentalId %></td>
                        <td><%= rental.customerName %></td>
                        <td><%= rental.rentalDays %></td>
                        <td><%= rental.totalCost %></td>
                        <td><%= rental.bookId %></td>
                        <td><%= rental.bookAuthor %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>

<%- include('partials/footer') %>